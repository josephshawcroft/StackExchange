<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/userProfilePic"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/userInfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/userInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userProfilePic">

        <LinearLayout
            android:id="@+id/userNameLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/userNameField"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_name" />

            <TextView
                android:id="@+id/userNameAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="John Marston" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/reputationLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/reputationField"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reputation" />

            <TextView
                android:id="@+id/reputationAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="123" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/badgesLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/badgesField"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/badges" />

            <TextView
                android:id="@+id/badgesAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="0 gold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/locationLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/locationField"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/location" />

            <TextView
                android:id="@+id/locationAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Tahiti" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ageLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ageField"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/age" />

            <TextView
                android:id="@+id/ageAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="33" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/creationDateLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/creationDateField"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/location" />

            <TextView
                android:id="@+id/creationDateAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="01/01/2000" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>